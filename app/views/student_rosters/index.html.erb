<div class="container">

  <!-- COURSE_HEADER PARTIAL -->
  <%= render 'courses/course_header', course: @course %>

  <!-- SEARCH BAR -->
  <div class="row">
    <div class="col-xs-6">

      <div class="search_students_wrap">
        <form>
         <div class="search-box">
          <input type="text" class="searchTerm" placeholder="Find a Student">
          <button type="submit" class="searchButton">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </form>
    </div>

    <div class="students-select-box">
      <%= render 'create', students: @students, course: @course %>
    </div>

  </div>

  <div class="col-xs-6">
    <div class="student-roster">
      <div class="capacity">
        <p>Course Capacity:   Min (<strong><%= @course.min_capacity %></strong>) | Max (<strong><%= @course.max_capacity %></strong>)</p>
      </div>
      <p> <%= render 'student_index', students: @students, course: @course %> </p>
    </div>

  </div>
</div>

<div ID="flashes"></div>
</div>
