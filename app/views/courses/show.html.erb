
<h1>Course ID <%= @course.id %> : <%= @course.subject.name %></h1>

<h2>Volunteers</h2>
<h3>Teachers</h3>
<% @course.volunteer_rosters.each do |roster| %>
  <% if roster.role == "teacher" %>
    <p> <%= roster.role %> : <%= roster.user.first_name  %> <%= roster.user.last_name  %> </p>
    <% end %>
  <% end %>

<h3>Assistants</h3>
<% @course.volunteer_rosters.each do |roster| %>
  <% if roster.role == "assistant" %>
    <p> <%= roster.role %> : <%= roster.user.first_name  %> <%= roster.user.last_name  %> </p>
    <% end %>
  <% end %>

