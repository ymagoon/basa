<% title 'Home' %>
<div class="better-container">
  <div class="tabs">
      <%= link_to home_path, class: "tab" do %>
        <h3> <%= @active_courses.count %> / <%= Course.count %></h3>
        <p>Aggragate Course Data</p>
        <% end %>
        <%= link_to volunteers_dashboard_index_path, class: "tab" do %>
        <h3> <%= @assigned_volunteers %> / <%= User.where(role: 'volunteer').count %></h3>
        <p>Aggragate Volunteer Data</p>
      <% end %>
      <%= link_to attendance_dashboard_index_path, class: "tab" do %>
        <h3><%= @percentage_attendance.round(4) * 100 %> %</h3>
        <p>Aggragate Attendance Data</p>
      <% end %>
      <%= link_to students_dashboard_index_path, class: "tab" do %>
        <h3><%= Student.count %></h3>
        <p>Aggragate Student Data</p>
      <% end %>
  </div>
</div>



