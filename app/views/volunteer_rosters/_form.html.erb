<div class="container">
  <div class="row">
    <h1 class="text-center">Add Volunteers to <%= @course.subject.name %></h1>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= simple_form_for([@course, @roster]) do |f| %>
        <%= f.input :user_id, collection: @volunteers, label_method: :first_name %>
        <%= f.input :role, as: :select, collection: @roles %>
        <%= f.submit class: 'btn btn-primary brand-primary' %>
      <% end %>
    </div>
  </div>
</div>

